@{
    ViewBag.Title = "Supplier Insert";
}
@using StockInventorySystem.Models
@model Supplier
<h2 align="center">Supplier Insert</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.SupplierName)
        @Html.TextBoxFor(m => m.SupplierName, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.SupplierName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactPerson)
        @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ContactPerson)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MobileNo)
        @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MobileNo)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <input type="submit" id="add" value="Add" class="btn btn-primary" style="padding: 10px 30px" />
}
@if (ViewBag.msg == "Yes")
{
    <div class="alert alert-success">
        <h4>Insert Successfully.</h4>
    </div>
}
else if (ViewBag.msg == "Exists")
{
    <div class="alert alert-danger">
        <h4>Failed!! Already Exists.</h4>
    </div>
}
else if (ViewBag.msg == "No")
{
    <div class="alert alert-danger">
        <h4>Failed!!</h4>
    </div>
}


<div class="form-group">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Supplier Name</th>
                <th>Contact Person</th>
                <th>Address</th>
                <th>Mobile No</th>
                <th>Email</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Supplier aSupplier in @ViewBag.Supplier)
            {
                <tr>
                    <td>@aSupplier.SupplierName</td>
                    <td>@aSupplier.ContactPerson</td>
                    <td>@aSupplier.Address</td>
                    <td>@aSupplier.MobileNo</td>
                    <td>@aSupplier.Email</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>

}