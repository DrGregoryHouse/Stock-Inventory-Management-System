@using StockInventorySystem.Models
@model StockInventorySystem.Models.Supplier

@{
    ViewBag.Title = "Supplier";
}

<h2 align="center">Delete Supplier</h2>
@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(m => m.SupplierName)
        @Html.DropDownListFor(m => m.SupplierName, new SelectList(ViewBag.Supplier, "Id", "SupplierName"), "Select Supplier", new {@class = "form-control"})
    </div>
    <br/>
    <div>
        <button type="submit" class="btn btn-primary" value="save" style="width: 110px;" onclick="return Assure()">Delete</button>
    </div>
}
@if (ViewBag.Message == "Yes")
{

    <div class="alert alert-success">
        <h4>Successfully deleted.</h4>
    </div>
}
else if (ViewBag.Message == "No")
{
    <div class="alert alert-success">
        <h4>Failed To Delete.</h4>
    </div>
}
@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>

    <script>
        function Assure() {
            return confirm(" Are you Sure to delete?");

        }
    </script>
}